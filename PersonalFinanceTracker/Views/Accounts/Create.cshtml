@model PersonalFinanceTracker.ViewModels.CreateAccountViewModel

@{
    ViewData["Title"] = "Add New Account";
}

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8 animate-fade-in">
        <div class="flex items-center space-x-4 mb-6">
            <a asp-action="Index" class="text-indigo-600 hover:text-indigo-800">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </a>
            <h1 class="text-3xl font-bold text-gray-900">Add New Account</h1>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 animate-slide-in">
        <form asp-action="Create" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-50 p-4 rounded-lg mb-6"></div>

            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-2">Account Name</label>
                <input asp-for="Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200" placeholder="e.g., Main Checking, Emergency Savings">
                <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Type" class="block text-sm font-medium text-gray-700 mb-2">Account Type</label>
                <select asp-for="Type" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200">
                    <option value="">Select account type</option>
                    <option value="Checking">Checking Account</option>
                    <option value="Savings">Savings Account</option>
                    <option value="Credit Card">Credit Card</option>
                    <option value="Investment">Investment Account</option>
                    <option value="Cash">Cash</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Type" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="InitialBalance" class="block text-sm font-medium text-gray-700 mb-2">Initial Balance</label>
                <div class="relative">
                    <span class="absolute left-3 top-3 text-gray-500">$</span>
                    <input asp-for="InitialBalance" type="number" step="0.01" class="w-full pl-8 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200" placeholder="0.00">
                </div>
                <span asp-validation-for="InitialBalance" class="text-red-600 text-sm"></span>
                <p class="mt-1 text-sm text-gray-500">Enter the current balance of this account</p>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2">Description (Optional)</label>
                <textarea asp-for="Description" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200" placeholder="Add any additional notes about this account..."></textarea>
                <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex space-x-4 pt-6">
                <button type="submit" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white py-3 px-6 rounded-lg font-medium transition-colors duration-200 shadow-sm hover:shadow-md">
                    Create Account
                </button>
                <a asp-action="Index" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 py-3 px-6 rounded-lg font-medium text-center transition-colors duration-200">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
